{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "type": "module",
    "scripts": {
        "build": "node ./scripts/build.js",
        "test": "vitest",
        "e2e": "pnpm exec playwright test",
        "e2e:report": "pnpm exec playwright show-report",
        "test:coverage": "vitest run --coverage",
        "watch": "node ./scripts/build.js --watch",
        "update-docs": "node ./scripts/update-docs.js",
        "release": "node ./scripts/release.js",
        "codeceptjs": "codeceptjs run --steps",
        "codeceptjs:headless": "HEADLESS=true codeceptjs run --steps",
        "codeceptjs:ui": "codecept-ui --app",
        "codeceptjs:demo": "codeceptjs run --steps -c node_modules/@codeceptjs/examples",
        "codeceptjs:demo:headless": "HEADLESS=true codeceptjs run --steps -c node_modules/@codeceptjs/examples",
        "codeceptjs:demo:ui": "codecept-ui --app  -c node_modules/@codeceptjs/examples"
    },
    "keywords": [],
    "author": "Vivek Pillai",
    "license": "ISC",
    "description": "HTML state driven behavior framework",
    "devDependencies": {
        "@eslint/js": "^9.16.0",
        "@playwright/test": "^1.50.1",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/vue": "^8.1.0",
        "@types/node": "^22.13.0",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitest/coverage-v8": "^2.1.8",
        "dot-json": "^1.3.0",
        "esbuild": "^0.24.0",
        "eslint": "^9.16.0",
        "eslint-plugin-codeceptjs": "^1.3.0",
        "globals": "^15.13.0",
        "import-export": "^1.0.1",
        "jsdom": "^25.0.1",
        "playwright": "^1.50.1",
        "vitest": "^2.1.8"
    }
}
